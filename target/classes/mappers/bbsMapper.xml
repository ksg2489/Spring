<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.bbs.mappers.bbs">
 
 
	<!-- 유저 아이디 중복체크 SQL문 --> 
 	<select id="idCheck" resultType="string">
 		Select user_id
 		FROM USERS
 		WHERE user_id = #{user_id}
 		
 	</select>
 	
 	<!-- 이메일 인증번호 불러오기 SQL문 -->
 	<select id ="getAuthnum" resultType="int"> <!-- resultType에서 int는 INTEGER이다. null값이 나올수있기때문에 객체타입인 INTEGER로반환 _int ->정수형 int -->  
 		SELECT auth_num
 		FROM AUTHMAIL
 		WHERE user_mail =#{user_mail}	
 	</select>
 	
 	<!-- 이메일 인증번호 저장하는 SQL문 -->
 	<insert id="setAuthnum" >
 		INSERT INTO AUTHMAIL
 		VALUES (#{user_mail},#{auth_num})
 	</insert>
 	
 	<!-- 이메일 인증번호 수정하기 SQL문 -->
 	<update id="resetAuthnum">
 		UPDATE AUTHMAIL
 		SET auth_num = #{auth_num}
 		WHERE user_mail = #{user_mail}	
 	</update>
 	
 	<!-- 이메일 인증번호 삭제 SQL -->
 	<delete id="deleteAuthmail">
 		DELETE FROM AUTHMAIL
 		WHERE user_mail=#{user_mail}
 	</delete>
 	
 	<!--  회원가입 SQL문 -->
 	<insert id="join">
 		INSERT INTO USERS
 		VALUES (#{user_id},#{user_pw},#{user_name},#{user_gender},#{user_email},#{user_addr})
 	</insert>
 	
 	<!-- 로그인 SQL문 -->
 	<select id="login" resultType="Users">
 		SELECT *
 		FROM USERS
 		WHERE user_id=#{user_id}
 		AND   user_pw=#{user_pw}
 	</select>
 	
 	
 	
 	
 </mapper>